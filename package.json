{
  "name": "inventory-management",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bun": "^1.1.29",
    "esbuild": "^0.24.0",
    "mime": "^4.0.4",
    "react": "next",
    "react-dom": "next",
    "react-router-dom": "latest",
    "server": "react-dom/server",
    "surrealdb": "^1.0.1",
    "surrealdb.node": "^1.0.0-beta.1"
  },
  "scripts": {
    "initDb": "surreal start file:'Database/inventory.db' -A --user admin --password admin",
